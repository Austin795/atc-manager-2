{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules":true,
            "arrowFunctions":true,
            "classes":true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "jsx-quotes": [
            "error",
            "prefer-double"
        ]
    }
}